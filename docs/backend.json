
{
  "entities": {
    "Event": {
      "title": "Event",
      "type": "object",
      "description": "Represents an event within the FestConnect application.",
      "properties": {
        "name": { "type": "string", "description": "Name of the event." },
        "description": { "type": "string", "description": "Detailed description of the event." },
        "date": { "type": "string", "format": "date-time", "description": "Date and time when the event starts." },
        "location": { "type": "string", "description": "Location where the event takes place." },
        "price": { "type": "number", "description": "Price of the event, set to 150 RS as per the user request." },
        "registeredAttendees": { "type": "number", "description": "Number of attendees currently registered for the event." },
        "image": { "type": "object", "properties": {
            "imageUrl": { "type": "string", "format": "uri" },
            "imageHint": { "type": "string" }
        } }
      },
      "required": ["name", "description", "date", "location", "price", "image"]
    },
    "Registration": {
      "title": "Registration",
      "type": "object",
      "description": "Represents a user's registration for an event.",
      "properties": {
        "userId": { "type": "string", "description": "Reference to User's auth ID." },
        "registrationDate": { "type": "string", "format": "date-time", "description": "Date and time when the user registered for the event." },
        "paymentStatus": { "type": "string", "enum": ["paid", "unpaid", "refunded"], "description": "The status of the payment for registration." }
      },
      "required": ["userId", "registrationDate", "paymentStatus"]
    },
    "UserProfile": {
        "title": "User Profile",
        "description": "Stores public-facing user profile information.",
        "type": "object",
        "properties": {
          "displayName": {
            "type": "string",
            "description": "The user's chosen display name."
          }
        },
        "required": ["displayName"]
    },
    "CartItem": {
        "title": "Cart Item",
        "description": "Represents a single item in a user's shopping cart.",
        "type": "object",
        "properties": {
            "productId": { "type": "string", "description": "The ID of the product." },
            "quantity": { "type": "number", "description": "The quantity of the product." },
            "addedAt": { "type": "string", "format": "date-time", "description": "Timestamp when the item was added." }
        },
        "required": ["productId", "quantity", "addedAt"]
    }
  },
  "auth": {
    "providers": [ "password", "anonymous" ]
  },
  "firestore": {
    "/events/{eventId}": {
        "schema": { "$ref": "#/entities/Event" },
        "description": "Stores details for each event."
    },
    "/events/{eventId}/registrations/{registrationId}": {
      "schema": { "$ref": "#/entities/Registration" },
      "description": "Subcollection storing registrations for a specific event."
    },
    "/users/{userId}": {
        "schema": { "$ref": "#/entities/UserProfile" },
        "description": "Stores public user profile information."
    },
    "/users/{userId}/cart/{cartItemId}": {
        "schema": { "$ref": "#/entities/CartItem" },
        "description": "Subcollection storing items in a user's shopping cart."
    }
  }
}
